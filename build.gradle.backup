plugins {
    id 'java'
    id 'eclipse'
}

// Project version
version = '1.0'

// Java 21 toolchain + compatibility
java {
    toolchain {
        languageVersion = JavaLanguageVersion.of(21)
    }
}

// Keep the classic compatibility fields for tools that read them
sourceCompatibility = JavaVersion.VERSION_21
targetCompatibility = JavaVersion.VERSION_21

repositories {
    mavenCentral()
}

dependencies {
    // JUnit Jupiter for tests (small and modern test engine)
    testImplementation 'org.junit.jupiter:junit-jupiter:5.10.0'
}

test {
    useJUnitPlatform()
}

// If the repo uploads archives locally in `repos/`, preserve that configuration
uploadArchives {
    repositories {
        flatDir {
            dirs 'repos'
        }
    }
}
